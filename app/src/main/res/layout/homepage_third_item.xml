<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_first"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="300dp"
        android:layout_height="wrap_content">

        <ImageView
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:id="@+id/imageView_first"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/music_name_first"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="11111111111111111"
        app:layout_constraintBottom_toBottomOf="@id/imageView_first"
        app:layout_constraintStart_toEndOf="@id/imageView_first"
        app:layout_constraintTop_toTopOf="@+id/imageView_first" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <View
        android:layout_width="270dp"
        android:layout_height="0.5dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons_first" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_second"
        app:layout_constraintEnd_toEndOf="@id/cons_first"
        app:layout_constraintStart_toStartOf="@id/cons_first"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cons_first">
    <ImageView
        android:id="@+id/imageView_second"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:id="@+id/music_name_second"
        android:text="111111"
        app:layout_constraintBottom_toBottomOf="@id/imageView_second"
        app:layout_constraintStart_toEndOf="@id/imageView_second"
        app:layout_constraintTop_toTopOf="@+id/imageView_second" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:layout_width="270dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="5dp"
        android:background="#E8E8E8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cons_second" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cons_third"
        app:layout_constraintEnd_toEndOf="@id/cons_first"
        app:layout_constraintStart_toStartOf="@id/cons_first"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cons_second">


    <ImageView
        android:id="@+id/imageView_third"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/music_name_third"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:maxLines="1"
        android:text="111111"
        app:layout_constraintBottom_toBottomOf="@id/imageView_third"
        app:layout_constraintStart_toEndOf="@id/imageView_third"
        app:layout_constraintTop_toTopOf="@+id/imageView_third" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
