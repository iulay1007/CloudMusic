<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">


        <ImageView
            android:id="@+id/Nav_circle_image"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_stars_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="50dp"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/Nav_username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Username"
            app:layout_constraintLeft_toRightOf="@+id/Nav_circle_image"
            app:layout_constraintTop_toTopOf="@id/Nav_circle_image"
            app:layout_constraintBottom_toBottomOf="@id/Nav_circle_image"
            android:layout_marginLeft="10dp"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/Nav_more"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/ic_baseline_keyboard_arrow_right_24"
            app:layout_constraintLeft_toRightOf="@id/Nav_username_tv"
            app:layout_constraintTop_toTopOf="@id/Nav_username_tv"
            app:layout_constraintBottom_toBottomOf="@id/Nav_username_tv"

            tools:ignore="MissingConstraints" />
        <ImageView
            android:background="@drawable/ic_baseline_crop_free_24"
            android:layout_width="35dp"
            android:layout_height="35dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/Nav_circle_image"
            app:layout_constraintBottom_toBottomOf="@id/Nav_circle_image"
            android:layout_marginRight="15dp"
            android:layout_marginEnd="15dp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/first_cardview"
        app:cardCornerRadius="10dp"
        android:layout_width="260dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/Nav_username_tv"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#B9000000"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/second_cardview"
        app:cardCornerRadius="10dp"
        android:layout_width="260dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/first_cardview"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
<ImageView
    android:layout_marginLeft="15dp"
    android:layout_marginTop="5dp"
    android:layout_width="30dp"
    android:layout_height="30dp"
    android:background="@drawable/ic_baseline_mail_outline_24"/>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/third_cardview"
        app:cardCornerRadius="10dp"
        android:layout_width="260dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/second_cardview"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/forth_cardview"
        app:cardCornerRadius="10dp"
        android:layout_width="260dp"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/third_cardview"
        tools:ignore="MissingConstraints"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
